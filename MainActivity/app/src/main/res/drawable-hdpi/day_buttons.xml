<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <!--corners android:radius="3dip" -->
            <stroke android:width="1dp" android:color="#ff8093b8" />
            <gradient android:angle="-90" android:startColor="#ff445059" android:endColor="#ff87a7aa"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <!--corners android:radius="3dp" -->
            <stroke android:width="1dp" android:color="#ff1a1f2d" />
            <solid android:color="#ff445059"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <stroke android:width="1dp" android:color="#ff1a1f2d" />
            <gradient android:angle="-90" android:startColor="#ffbac6ce" android:endColor="#ff445059" />
        </shape>
    </item>
</selector>

